<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="My Photos"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#000000"
        android:background="#B0E0E6"
        android:layout_marginLeft="125dp"
        android:layout_marginRight="125dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imgone"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/topTitle"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/textone"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="The 1st Photo"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imgone"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:id="@+id/imgtwo"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/topTitle"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/texttwo"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="The 2st Photo"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imgtwo"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:id="@+id/imgthree"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/imgone"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/textthree"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="The 3rd Photo"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imgthree"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:id="@+id/imgfour"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/imgtwo"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/textfour"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="The 4th Photo"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imgfour"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>